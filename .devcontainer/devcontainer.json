// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
    "name": "marcusrbrown/.dotfiles",

    "image": "mcr.microsoft.com/devcontainers/base:1.0.3",

    "hostRequirements": {
        "cpus": 4
    },

    // Features to add to the dev container. More info: https://containers.dev/features.
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1.0.11": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "EditorConfig.EditorConfig",
                "esbenp.prettier-vscode",
                "foxundermoon.shell-format",
                "github.copilot",
                "github.vscode-github-actions",
                "GitHub.vscode-pull-request-github",
                "jeff-hykin.better-shellscript-syntax",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "timonwong.shellcheck"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    },

    "containerEnv": {
        "ANDROID_SDK_HOME": "${containerEnv:HOME}/.local/share/android",
        "DC_NMMODE": "hardlinks-local",
        "GNUPGHOME": "${containerEnv:HOME}/.config/gnupg",
        "LOCAL_WORKSPACE": "${localWorkspaceFolder}",
        "NPM_CONFIG_USERCONFIG": "${containerEnv:HOME}/.config/npm/npmrc",
        "RANDFILE": "${containerEnv:HOME}/.cache/randfile",
        "TERMINFO": "${containerEnv:HOME}/.local/share/terminfo",
        "XDG_CONFIG_HOME": "${containerEnv:HOME}/.config",
        "XDG_CACHE_HOME": "${containerEnv:HOME}/.cache",
        "XDG_DATA_HOME": "${containerEnv:HOME}/.local/share",
        "XDG_STATE_HOME": "${containerEnv:HOME}/.local/state",
        "ZDOTDIR": "${containerEnv:HOME}/.config/zsh"
    },
    "remoteEnv": {
        "GIT_DIR": "${containerEnv:HOME}/.dotfiles",
        "GIT_WORK_TREE": "${containerEnv:HOME}"
    },
    "remoteUser": "vscode",
    "workspaceFolder": "/home/vscode",
    "workspaceMount": "source=dotfiles-dev,target=/home/vscode,type=volume"
}
