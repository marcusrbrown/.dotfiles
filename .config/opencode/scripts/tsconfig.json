{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Bun runtime targeting
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],

    // Type checking - strict but practical
    // Note: @opencode-ai/sdk types lag behind runtime API (uses { query: {} } wrapper)
    "strict": true,

    // Module behavior
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Output (scripts run directly via bun, no emit needed)
    "noEmit": true,

    // Quality
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts"]
}
