# DO NOT EDIT BELOW THIS LINE
[core]
	excludesfile = ~/.cvsignore
	autocrlf = true
	safecrlf = false
[color]
	ui = always
	status = always
	diff = always
	branch = always
	interactive = always
	grep = always
[alias]
	ci = commit
	cia = commit -a
	co = checkout
	stat = status
	st = status --short
	cinum = !git log --pretty=oneline | wc -l | sed -e \"s/ //g\"
	up-sub = "!f() { pushd \"$1\" >/dev/null && git checkout master && git pull && popd >/dev/null && git submodule update --init --recursive; }; f"
	discard = checkout --
[branch]
	autosetuprebase = always
[push]
	default = current
